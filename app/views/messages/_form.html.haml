.form
  %form#new_message.new_message
    .input-box
      %input#message_content.input-box__text(type="text" name="massage[content]" placeholder="type a message")/
      %label.input-box__image(for="message_image")
        = fa_icon 'image'
        %input#massage_image.input-box__image__file(type="file" name="message[image]")/
    %input.submit-btn(type="submit" value="Send" name="commit")/