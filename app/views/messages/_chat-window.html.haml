.chat-window
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        = @group.name
      %ul.main-header__left-box__menber-list
        - @users.each do |user|
          %li.main-header__left-box__menber-list__member
            = user.name
    .main-header__edit-btn
      = link_to edit_group_path(@group) do
        Edit
  .messages
    = render @messages
  = render 'form'